---
import Button from "@components/projects/Button.astro";
import { webProjects } from "@data/projects";
---

<section
  class="flex flex-col gap-6 w-full max-w-4xl m-auto max-md:flex-col max-md:mx-[0.5rem] max-md:items-start"
  id="projects"
>
  <div class="flex items-center gap-2">
   
    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-click"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 12l3 0" /><path d="M12 3l0 3" /><path d="M7.8 7.8l-2.2 -2.2" /><path d="M16.2 7.8l2.2 -2.2" /><path d="M7.8 16.2l-2.2 2.2" /><path d="M12 12l9 3l-4 2l-2 4l-3 -9" /></svg>
    <h2 class="text-4xl font-semibold">Web portfolio</h2>
  </div>

 
  <div class="flex gap-8 w-full max-w-4xl m-auto max-md:flex-col max-md:mx-[0.5rem] max-md:items-start">
    {
      webProjects.map(({ title, image, description, link }) => (
        <div class="flex flex-col gap-3">
          <div class="flex items-center gap-2">
            <h3 class="text-2xl font-semibold">{title}</h3>
            <div class="flex gap-4">
              {
                link.map(({ name, url }) => (
                  <Button href={url} text={name} />
                ))
              }
            </div>
          </div>
          <p class="text-white/70">{description}</p>
          <div class="relative w-full max-w-[450px] h-[300px] overflow-hidden rounded-xl">
            <img src=`${image}` alt="Project Image" class="w-full h-full object-cover transform transition-transform duration-500 hover:rotate-3 hover:scale-110" />
          </div>
          
        </div>
      ))
    }
  </div>
   
</section>
