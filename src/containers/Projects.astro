---
import ProjectCard from "@components/projects/ProjectCard.astro";
import { projects } from "@data/projects";
---

<section
  class="flex flex-col gap-6 w-full max-w-4xl m-auto max-md:flex-col max-md:mx-[0.5rem] max-md:items-start"
  id="projects"
>
  <div class="flex items-center gap-2">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="40"
      height="40"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path d="M7 8l-4 4l4 4"></path>
      <path d="M17 8l4 4l-4 4"></path>
      <path d="M14 4l-4 16"></path>
    </svg>
    <h2 class="text-4xl font-semibold">Projects</h2>
  </div>
  <div class="flex flex-col gap-8 w-full max-w-4xl m-auto max-md:flex-col max-md:mx-[0.5rem] max-md:items-start">
    {
      projects.map(({ title, description, image, technologies, links }) => (
        <ProjectCard
          title={title}
          description={description}
          image={image}
          technologies={technologies}
          links={links}
        />
      ))
    }
  </div>
</section>
