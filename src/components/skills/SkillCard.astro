---
import AstroIcon from 'src/components/svgs/Astro.astro';
import Bootstrap from 'src/components/svgs/Bootstrap.astro';
import Css from 'src/components/svgs/Css.astro';
import Figma from 'src/components/svgs/Figma.astro';
import Flutter from 'src/components/svgs/Flutter.astro';
import Git from 'src/components/svgs/Git.astro';
import Github from 'src/components/svgs/Github.astro';
import Html from 'src/components/svgs/Html.astro';  
import Javascript from 'src/components/svgs/Js.astro';
import Next from 'src/components/svgs/Next.astro';
import Php from 'src/components/svgs/Php.astro';
import React from 'src/components/svgs/React.astro';
import Tailwind from 'src/components/svgs/Tailwind.astro';
import Typescript from 'src/components/svgs/Ts.astro';
import Vercel from 'src/components/svgs/Vercel.astro';
import Vite from 'src/components/svgs/Vite.astro';

interface Props {
    name: string;
    icon: string;
}

const { name, icon } = Astro.props;

const icons = {
    astro: AstroIcon,
    bootstrap: Bootstrap,
    css: Css,
    figma: Figma,
    flutter: Flutter,
    git: Git,
    github: Github,
    html: Html,
    javascript: Javascript,
    next: Next,
    php: Php,
    react: React,
    tailwind: Tailwind,
    typescript: Typescript,
    vercel: Vercel,
    vite: Vite
};

const IconComponent = icons[icon as keyof typeof icons];
---

<span class="flex flex-col items-center w-1/5 max-w-[100px] gap-2 p-3 rounded-lg bg-white/5 backdrop-blur-sm hover:scale-110 hover:bg-white/10 transition-all duration-300 group">
    <div class="w-12 h-12 flex items-center justify-center group-hover:text-tool-{icon} transition-colors duration-300">
        <IconComponent />
    </div>
    <h3 class="text-sm font-medium text-center">{name}</h3>
</span>