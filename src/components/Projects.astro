---
import ProjectCard from "./projects/ProjectCard.astro";

const projects = [
  {
    title: "Dragon Radar",
    description: "This page contains all the characters of the Dragon Ball sagas. It is still in process.",
    image: "/dragon-radar-image.webp",
    technologies: ["Next", "Tailwind"],
    links: [
      {
        name: "Code",
        url: "https://github.com/dcavadiam/Dragon-Radar",
      },
      {
        name: "Deploy",
        url: "https://cm-dragon-radar.vercel.app/",
      },
    ],
  },
  {
    title: "4 in line",
    description: "This is a simple game where you have to guess the number of the next 4 numbers in a row.",
    image: "/4-en-linea.webp",
    technologies: ["Vite", "Javascript"],
    links: [
      {
        name: "Code",
        url: "https://github.com/dcavadiam/react/tree/main/self-learning/cuatro-en-linea",
      },
      {
        name: "Deploy",
        url: "https://cm-fourinline.netlify.app",
      },
    ],
  }
];
---

<section
  class="flex flex-col gap-6 w-full max-w-4xl m-auto max-md:flex-col max-md:mx-[0.5rem] max-md:items-start"
  id="projects"
>
  <div class="flex items-center gap-2">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="40"
      height="40"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path d="M7 8l-4 4l4 4"></path>
      <path d="M17 8l4 4l-4 4"></path>
      <path d="M14 4l-4 16"></path>
    </svg>
    <h2 class="text-4xl font-semibold">Projects</h2>
  </div>
  <div class="flex flex-col gap-8 w-full max-w-4xl m-auto max-md:flex-col max-md:mx-[0.5rem] max-md:items-start">
    {
      projects.map(({ title, description, image, technologies, links }) => (
        <ProjectCard
          title={title}
          description={description}
          image={image}
          technologies={technologies}
          links={links}
        />
      ))
    }
  </div>
</section>
